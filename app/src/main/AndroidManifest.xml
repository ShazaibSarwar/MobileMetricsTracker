<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.shazaibsarwar.spector">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_PRIVILEGED_PHONE_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_cpus"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_cpus"
        android:supportsRtl="true"
        android:theme="@style/Theme.Spector">
        <activity android:name=".SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MemoryDetailsActivity" />
        <activity android:name=".SIM_Activity" />
        <activity android:name=".SensorsActivity" />
        <activity android:name=".CPU_Activity" />
        <activity android:name=".SystemAppsActivity" />
        <activity android:name=".UserAppsActivity" />
        <activity android:name=".BatteryActivity" />
        <activity android:name=".DisplayAvtivity" />
        <activity android:name=".DeviceID_Activity" />
        <activity android:name=".GeneralActivity" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar">
        </activity>
    </application>

</manifest>